<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Query Stats</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            cursor: pointer;
        }
        th:hover {
            background-color: #ddd;
        }

        pre {
            white-space: pre-wrap;
            height: 100px;
            width: 300px;
            overflow: auto;
            box-shadow: 0 0 10px inset #ccc;
        }
    </style>
</head>
<body>
    <h1>Query Stats (order by <%= orderBy %> <%= orderDirection %>)</h1>
    <table>
        <thead>
            <tr>
                <th><a href="?orderBy=query_id&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">ID <%= orderBy === 'query_id' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=session_id&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Session ID <%= orderBy === 'session_id' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=query&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Query <%= orderBy === 'query' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=params&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Params <%= orderBy === 'params' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=query_plan&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Query Plan <%= orderBy === 'query_plan' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th></th>
                <th><a href="?orderBy=plan_time&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Plan Time <%= orderBy === 'plan_time' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=exec_time&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Exec Time <%= orderBy === 'exec_time' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
                <th><a href="?orderBy=timestamp&direction=<%= orderDirection === 'asc' ? 'desc' : 'asc' %>">Timestamp <%= orderBy === 'timestamp' ? (orderDirection === 'asc' ? '▲' : '▼') : '' %></a></th>
            </tr>
        </thead>
        <tbody>
            <% stats.forEach(stat => { %>
                <tr>
                    <td><%= stat.query_id %></td>
                    <td><%= stat.session_id %></td>
                    <td><%= stat.query %></td>
                    <td><pre><%= stat.params %></pre></td>
                    <td><pre><%= stat.query_plan %></pre></td>
                    <td><a href="/suggest?query_id=<%= stat.query_id %>">Suggest</a></td>
                    <td><%= stat.plan_time %>ms</td>
                    <td><%= stat.exec_time %>ms</td>
                    <td><%= stat.timestamp %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>